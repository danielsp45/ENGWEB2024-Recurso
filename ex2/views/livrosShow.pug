block content
    doctype html
    html
    head
        meta(charset="UTF-8")
        link(rel="icon", href="favicon.png")
        link(rel="stylesheet", href="/w3.css")
        title Livros
    body
        .w3-card-4
        header.w3-container.w3-green
            h1 Lista de livros
        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Title
                    th Author
                    th Publish Date
                    th Pages
                each livro in llist
                    tr
                        td
                            a(href='/' + livro._id)=livro._id
                        td=livro.title
                        td
                            a(href='/authors/' + livro.author)=livro.author
                        td=livro.publishDate
                        td=livro.pages
            div
                footer.w3-container.w3-green
                    address
