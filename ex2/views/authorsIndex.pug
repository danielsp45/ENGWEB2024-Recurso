block content
    doctype html
    html
    head
        meta(charset="UTF-8")
        link(rel="icon", href="favicon.png")
        link(rel="stylesheet", href="/w3.css")
        title Author
    body
        .w3-card-4
        header.w3-container.w3-green
            h1 Lista de livros
        .w3-container
            table.w3-table-all
                tr
                    th Identificador
                    th Identificador
                    th Título
                    th Autores
                    th Data de Publicação
                    th Número de Páginas
                each livro in livros
                    tr
                        td
                            a(href="/" + livro._id)= livro._id.substring(0, 50)
                        td= livro.title
                        td
                            if livro.author && Array.isArray(livro.author)
                                each author in livro.author
                                    a(href="/authors/" + author)= author
                                    | &nbsp;
                            else
                                | N/A
                        td= livro.publishDate
                        td= livro.pages
            div
                footer.w3-container.w3-green
                    address
                        | Gerado por galuno::EngWeb2024
